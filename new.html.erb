<input type="button" id="HS" value="Tìm HS" onclick="myFunction">

<br><br>

<script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js" >
</script>
<script type="text/javascript">

   function nhap(){
          var name = $('#name').val();
          var class1 = $('#class1').val();
          var diemToan = $('#diemToan').val();
          var diemLy = $('#diemLy').val();
          var diemHoa = $('#diemHoa').val();
          var mid = (parseInt(diemToan)+parseInt(diemHoa)+parseInt(diemLy))/3;

          var row ="<tr>" +
                    "<td>"+class1+"</td>" +
                    "<td>"+name+"</td>" +
                    "<td>"+diemToan+"</td>" +
                    "<td>"+diemLy+"</td>" +
                    "<td>"+diemHoa+"</td>" +
                    "<td>"+mid+"</td>"+
                   "</tr>";
                   
      $("#mytable tr:last").after(row);

      if(mid >= 8) {
            $("td").addClass("red");
      };

 };


  function myFunction() {
          var diemToan = $('#diemToan').val();
          var diemLy = $('#diemLy').val();
          var diemHoa = $('#diemHoa').val();
          var mid = (parseInt(diemToan)+parseInt(diemHoa)+parseInt(diemLy))/3;

          if(mid >= 8) {
            $("td").addClass("red");
          }
  }
  

</script>


